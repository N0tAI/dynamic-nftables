[Unit]
Description=Dynamic Nftables Input Rule for %i
After=network-pre.target
After=nftables.service
Before=network.target
BindsTo=nftables.service
ReloadPropagatedFrom=nftables.service

[Service]
Type=oneshot
RemainAfterExit=yes

ExecStartPre=/usr/bin/nft add chain inet global dynin-%i
ExecStart=/bin/sh -c 'echo "table inet global { chain dynin-%i { include \"/etc/nftables/dynamic/%i.nft\"; } }" | /usr/bin/nft -f -'
ExecStartPost=/usr/bin/nft add rule inet global dynamic_input jump dynin-%i

ExecStop=/usr/bin/nft delete rule inet global dynamic_input jump dynin-%i
ExecStop=/usr/bin/nft flush chain inet global dynin-%i
ExecStop=/usr/bin/nft delete chain inet global dynin-%i

[Install]
WantedBy=multi-user.target
